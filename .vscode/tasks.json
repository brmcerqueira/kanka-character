{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start",
            "type": "shell",  
            "command": "deno",
            "options": {
                "cwd": "${workspaceFolder}",
                "env": {
                    "HOST": "http://localhost:3000"
                }
            },
            "args": [
                "run",
                "--allow-all",
                "main.ts"     
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}