{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build",
            "type": "shell",  
            "command": "docker",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "build",
                "-t",
                "kanka-character:latest",
                "."    
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "Run",
            "type": "shell",  
            "command": "docker",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "args": [
                "run",
                "--rm",
                "-p",
                "8080:80",
                "--env",
                "KANKA_TOKEN=$KANKA_TOKEN",
                "--env",
                "CAMPAIGN_ID=$CAMPAIGN_ID",
                "--env",
                "DISCORD_TOKEN=$DISCORD_TOKEN",
                "--env",
                "STORYTELLER_ID=$STORYTELLER_ID",
                "--env",
                "HOST=http://localhost:8080",
                "kanka-character:latest"    
            ],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}